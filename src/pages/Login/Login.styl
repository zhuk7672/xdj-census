.login
  height 100%
  .blockOut
    position fixed
    z-index 10
    bottom 0
    left 0
    right 0
    width 750px
    height 120px
    margin 0 auto

    background-color #f8f8f8
.logo
  position relative
  top 30px
  width 180px
  height 180px
  margin 0 auto 80px
  overflow hidden
  img
    width 100%
    height 100%

.loginBox
  width 80%
  margin 0 auto
  .row
    width 100%
    height 60px
    background-color #fff
    border-radius 10px
    overflow hidden
    margin-bottom 20px
    display flex
    align-items center
    .icon
      width 30px
      height 30px
      background-color #000
      margin-left 10px
      background: url('http://s.sfddj.com/Public/static/img/newicon/orderAdmin/my-gray.png') center center no-repeat
      background-size 100%
      &.ic2
        background: url('http://s.sfddj.com/Public/static/img/newicon/orderAdmin/Login_PassWord@2x.png') center center no-repeat
        background-size 100%
        
    input
      width calc(100% - 50px)
      height 100%
      font-size 26px
      border none;
      margin-left auto
    .loginBtn
      width 100%
      height 100%
      line-height 60px
      text-align center
      font-size 26px
      color #fff
      background-color #fa444f