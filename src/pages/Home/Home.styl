.home
  header
    position relative
    width 100%
    height 200px
    background-color #ff5353
    padding 20px
  h1
    text-align center
    color #fff
    font-size 30px
    margin-bottom 20px
    line-height 1.3
  .days
    ul
      width 100%
      height 42px
      color #fff
      font-size 22px  
      line-height 1.4
      li,a
        position relative
        text-align center
        padding 0 15px
        color #ffffff
        &.active
          &:after
            content ""
            position absolute
            bottom -10px
            left 50%
            width 70%
            height 2px
            background-color #fff
            transform translateX(-50%)
  .census
    position absolute
    bottom -55%
    left 50%
    width 400px
    border-radius 15px          
    background-color #fff
    padding 10px
    text-align center
    line-height 1.3
    transform translateX(-50%)
    .item
      width 50%
      height 70px
      border-bottom 1px solid #eee
      padding-top 10px
      p
        width 100%
        font-weight bold
        color #333
        font-size 20px
      span
        width 100%
        font-size 16px
        color #7b7b7b
  .publicList
    width 100%
    padding 0 12px
    margin-bottom 20px
    background-color #fff
    h2
      position relative
      padding 20px 0
      font-size 22px
      color #333
      padding-left 20px
      text-align left
      &:before
        content ""
        position absolute
        top 50%
        left 0
        width 4px
        height 50%
        transform translateY(-50%)
        background-color #ff5353
    .list
      &.lt2
        ul
          li
            .left
              width 90%
              text-align left
      ul
        width 100%
        li
          height 52px
          border-bottom 1px solid #eee
          font-size 18px
          .left
            color #7e7e7e
          .right
            color #ff7d40
  .quarterData
    width 100%
    background-color #fff
    padding 20px 0
    .box
      width 96%
      margin 0 auto
      border 1px solid #eee
      border-radius 5px
      padding 10px
      line-height 1.4
      .top
        color #7b7b7b
        font-size 22px
        font-weight bold
        margin-bottom 10px
    .w20
      width 20%
    .w50
      width 50%
    .w30
      width 30%
