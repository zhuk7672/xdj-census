.tableBox
  .text
    position relative
    .topRow
      line-height 34px
      &.acti
        .icon
          transform rotate(0deg)
    .icon
      position absolute
      right 0
      top 14px
      width 15px
      height 8px
      background url('http://s.sfddj.com/Public/static/img/vueShop/2020goodsDetail/down-icon@2x.png') center center no-repeat
      background-size 100%
      transform rotate(180deg)
      transition 0.3s
    .row
      font-size 18px
      color #7b7b7b
      

  ul
    width 100%
    padding 10px 0
    li
      width 100%
      height 30px
      line-height 30px
      margin-bottom 5px
      background-color aliceblue
      span
        color #7b7b7b
        font-size 16px